<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_commentsTitle"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="或许你会想了解的电影里的墨西哥元素"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_commentsauthor"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_hint"
        android:text="作者：吉祥路"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_comments"
        android:textSize="12sp"
        android:textColor="@color/text_hint"
        android:layout_marginTop="5dp"
        android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        />

</LinearLayout>